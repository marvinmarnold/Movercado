<%= simple_form_for @app, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> App</legend>
    <%= f.input :app_code %>
    <%= f.input :type, :as => :select, :collection => app_types %>
    <%= f.input :name %>
    <%= f.input :description, :input_html => { :rows => 5 } %>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', apps_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
