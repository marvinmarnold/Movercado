<%= form_for @user_app_var, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> User App Var</legend>

    <div class="control-group">
      <%= f.label :role, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :role, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :times_interacted, :class => 'control-label' %>
      <div class="controls">
        <%= f.number_field :times_interacted, :class => 'number_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :validated_times_interacted, :class => 'control-label' %>
      <div class="controls">
        <%= f.number_field :validated_times_interacted, :class => 'number_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :user_id, :class => 'control-label' %>
      <div class="controls">
        <%= f.number_field :user_id, :class => 'number_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :app_id, :class => 'control-label' %>
      <div class="controls">
        <%= f.number_field :app_id, :class => 'number_field' %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', user_app_vars_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
