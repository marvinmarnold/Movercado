<%= form_for @actor_code, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Actor Code</legend>

    <div class="control-group">
      <%= f.label :code, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :code, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :times_used, :class => 'control-label' %>
      <div class="controls">
        <%= f.number_field :times_used, :class => 'number_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :user_id, :class => 'control-label' %>
      <div class="controls">
        <%= f.number_field :user_id, :class => 'number_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :app_id, :class => 'control-label' %>
      <div class="controls">
        <%= f.number_field :app_id, :class => 'number_field' %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', actor_codes_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
